<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorFragment">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="802dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Calculadora"
                android:textSize="20dp"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtIndication"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:text="Ingrese el primer nÃºmero" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/iptNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number|numberDecimal" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center_vertical|end"
            android:paddingRight="15dp"
            android:textAlignment="gravity" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="363dp"
                android:clipToPadding="true">

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="+"
                    android:textColor="@color/black_soft"
                    android:textSize="150px"
                    app:backgroundTint="@color/white_soft" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="-"
                    android:textColor="@color/black_soft"
                    android:textSize="150px"
                    app:backgroundTint="@color/white_soft" />

                <Button
                    android:id="@+id/btnReset"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:backgroundTintMode="add"
                    android:isScrollContainer="false"
                    android:pointerIcon="all_scroll"
                    android:textAlignment="center"
                    android:textColor="@color/black_soft"
                    android:textSize="100px"
                    app:backgroundTint="@color/grey_soft"
                    android:text="AC"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="true">

                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="x"
                    android:textColor="@color/black_soft"
                    android:textSize="100px"
                    app:backgroundTint="@color/white_soft" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="/"
                    android:textColor="@color/black_soft"
                    android:textSize="100px"
                    app:backgroundTint="@color/white_soft" />

                <Button
                    android:id="@+id/btnEqual"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:backgroundTintMode="add"
                    android:isScrollContainer="false"
                    android:pointerIcon="cell"
                    android:text="="
                    android:textAlignment="center"
                    android:textColor="@color/black_soft"
                    android:textSize="150px"
                    app:backgroundTint="@color/grey_soft"
                    app:iconSize="50dp"
                    app:iconTint="@color/black_soft" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>